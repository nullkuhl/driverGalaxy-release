							Background="{TemplateBinding Panel.Background}"
							BorderBrush="{TemplateBinding Border.BorderBrush}"
							BorderThickness="{TemplateBinding Border.BorderThickness}"
							CornerRadius="20"
                            Name="Outer">
						<Border CornerRadius="20"
								BorderThickness="0,1,0,0"
								BorderBrush="{StaticResource ButtonInnerBorder}"
								Name="Inner">
							<ContentPresenter TextElement.Foreground="{TemplateBinding TextElement.Foreground}"
											  TextElement.FontSize="{TemplateBinding TextElement.FontSize}"
											  Margin="{TemplateBinding Control.Padding}"
											  HorizontalAlignment="{TemplateBinding Control.HorizontalContentAlignment}"
											  VerticalAlignment="{TemplateBinding Control.VerticalContentAlignment}">
								<ContentPresenter.Effect>
									<DropShadowEffect BlurRadius="1"
													  Direction="90"
													  Color="#12A4C6"
													  ShadowDepth="1" />
								</ContentPresenter.Effect>
							</ContentPresenter>
						</Border>
					</Border>

					<ControlTemplate.Triggers>
						<Trigger Property="UIElement.IsMouseOver" Value="True">
							<Setter TargetName="Inner"
									Property="Panel.Background"
									Value="{StaticResource ButtonMouseOver}" />
						</Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="#F0F0F0" />
                            <Setter TargetName="Inner" Property="Background" Value="{StaticResource ButtonDisabled}" />
                            <Setter TargetName="Inner" Property="BorderBrush" Value="#AAA0A0A0" />
                            <Setter TargetName="Outer" Property="BorderBrush" Value="{StaticResource ButtonBorderDisabled}" />
                        </Trigger>
                    </ControlTemplate.Triggers>

				</ControlTemplate>
			</Setter.Value>
		</Setter>
